<UserControl x:Class="BeyonSense.ToggleSwitch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BeyonSense"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="100">

    <Viewbox>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                Height="60" Width="100">
            <Rectangle x:Name="Back" Fill="#FF14A0FF" HorizontalAlignment="Center" VerticalAlignment="Center"
                        Height="56"  Width="96" RadiusY="29" RadiusX="29" MouseLeftButtonDown="Back_MouseLeftButtonDown"/>
            <Ellipse x:Name="Toggle" Fill="#FFF" Height="50"  Width="50" VerticalAlignment="Center"
                        Stroke="#FFF" MouseLeftButtonDown="Toggle_MouseLeftButtonDown"/>
        </Grid>
    </Viewbox>
</UserControl>
