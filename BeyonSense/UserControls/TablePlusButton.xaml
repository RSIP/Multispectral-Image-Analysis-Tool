<UserControl x:Class="BeyonSense.TablePlusButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BeyonSense"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="20">

    <Viewbox>
        <Grid Width="20" Height="20">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0*"/>
            </Grid.RowDefinitions>
            <Ellipse Stroke="Black" x:Name="Plus" MouseLeftButtonDown="Plus_MouseLeftButtonDown"/>
            <TextBlock HorizontalAlignment="Center" Text="+" TextAlignment="Center" VerticalAlignment="Center" Margin="6,0,6,3.2"/>
        </Grid>
    </Viewbox>

</UserControl>
